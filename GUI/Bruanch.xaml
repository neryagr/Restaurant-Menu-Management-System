<Window x:Class="GUI.Bruanch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bruanch" Height="330.12" Width="487">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Add Braunch" FontSize="20" Click="Add_braunch_Click" Grid.ColumnSpan="2" Margin="0,0,111.8,0" >
        </Button>
        <Button Content="Remove braunch" Grid.Row="1" FontSize="20" Click="Remove_Braunch_Click" Grid.ColumnSpan="2" Margin="0,0,111.8,72.6" Grid.RowSpan="2"/>
        <Button Content="Update braunch" Grid.Row="2" FontSize="20" Click="Update_Braunch_Click" Grid.ColumnSpan="2" Margin="0,0.6,111.8,74.8" Grid.RowSpan="2"/>
        <Button Content="Back to menu" Grid.RowSpan="3" Grid.Row="1" Grid.Column="1" Margin="0.2,0,-0.2,-0.2" Click="Button_Click" />
        <Image Source="logo.jpg" Grid.Column="1" Grid.RowSpan="1" Margin="0.2,0,-0.2,0" />
        <Button x:Name="button" Content="ראה את כל הסניפים" Grid.Row="3" FontSize="20" Click="show_all_click"/>
    </Grid>
</Window>
