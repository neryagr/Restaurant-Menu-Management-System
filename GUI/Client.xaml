<Window x:Class="GUI.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="330.12" Width="487">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Add client" FontSize="20" Click="Add_Client_Click"/>
        <Button Content="Remove client" Grid.Row="1" FontSize="20" Click="Remove_Client_Click"/>
        <Button Content="Update client" Grid.Row="2" FontSize="20" Click="Update_Client_Click"/>
        <Button Content="Back to menu" Grid.RowSpan="3" Grid.Row="1" Grid.Column="1" Click="Button_Click" />
        <Image Source="logo.jpg" Grid.Column="1" Grid.RowSpan="1" />
        <Button Content="ראה את כל הלקוחות" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Width="368" Height="75" Click="Button_Click_1"/>
    </Grid>
</Window>
