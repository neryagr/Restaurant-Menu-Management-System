<Window x:Class="GUI.Remove_Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remove_Client" Height="300" Width="300">
    <Grid Margin="0,0,0,-2">
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="148*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <Button  Content="הסר" Grid.Row="1" Click="Button_Click" Margin="0,90.2,-0.4,47" Grid.RowSpan="2"/>
        <Label Content="Enter The Client Id that you want to remove :" Grid.Row="1" FontSize="14" Margin="0,14.2,-0.4,44.8"  />
        <TextBox x:Name="ClientID" HorizontalAlignment="Left" Height="23" Margin="86,47.2,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="1" />
        <Label Content="Remove Client" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Margin="46,10,46,17" Width="200" Background="red"/>
        <Button x:Name="button" Content="חזרה לחלון לקוח" HorizontalAlignment="Left" Margin="0,0.2,0,0" Grid.Row="2" VerticalAlignment="Top" Width="146" Height="47" Click="button_Click_1"/>
        <Button x:Name="button1" Content="חזרה לחלון הראשי" HorizontalAlignment="Left" Margin="146,0.2,-0.4,0" Grid.Row="2" VerticalAlignment="Top" Width="148" Height="47" Click="button1_Click"/>

    </Grid>
</Window>
