<Window x:Class="GUI.Remove_Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remove_Order" Height="300" Width="300">
    <Grid>

        <Grid Margin="0,0,0,-2">
            <Grid.RowDefinitions>
                <RowDefinition Height="77*"/>
                <RowDefinition Height="148*"/>
                <RowDefinition Height="47*"/>
            </Grid.RowDefinitions>
            <Button Content="הסר" Grid.Row="1" Click="Button_Click" Margin="0,101,0,0"/>
            <TextBlock Text="Enter the reservation num of the order you want to remove :"  Grid.Row="1" Margin="46,16,46,94" Width="200" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
            <TextBox x:Name="OrderNum" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Grid.Row="1" Margin="88,54,0,0"   />
            <Label Content="Remove Order" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Width="auto" Background="red" />
            <Button Content="חזרה לחלון הזמנה" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Width="147" Height="47" Click="Button_Click_2"/>
            <Button Content="חזרה לחלון הראשי" HorizontalAlignment="Left" Margin="147,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="145" Height="47" Click="Button_Click_1"/>

        </Grid>

    </Grid>
</Window>
