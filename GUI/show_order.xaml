<Window x:Class="GUI.show_order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="show_order" SizeToContent="WidthAndHeight">
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Name="s" Grid.Column="3"/>
        <StackPanel Name="s1" Grid.Column="2"/>
        <StackPanel Name="s2" Grid.Column="1"/>
        <StackPanel Name="s3" Grid.Column="0"/>
    </Grid>
    </ScrollViewer>
</Window>
